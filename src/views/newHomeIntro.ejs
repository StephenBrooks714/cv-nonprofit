<!doctype html>
<html lang="en">
<%- include('layouts/header') -%>
<body>
<header>
    <%- include('layouts/navbar') -%>
</header>

<main>
    <div class="container" style="margin-top: 140px; margin-bottom: 90px;">
        <section class="row justify-content-center">
            <div class="col-lg-8 mb-4">
                <nav>
                    <a href="/">HOME</a> |
                    <a href="/boardMembers">ABOUT</a> |
                    <a href="/testimonials">TESTIMONIALS</a> |
                    <a href="/dashboard">ADMIN</a>
                </nav>
            </div>
            <div class="col-lg-8 mb-2">
                <small class="small mb-2">Update The Home Intro</small>
                <h1 class="display-4"><span class="fw-bold">Home</span> <span class="text-info">Intro</span></h1>
                <p class="lead mb-3">This will update the Intro on the home page.</p>
                <form action="/store/homeIntro" method="post" enctype="multipart/form-data">
                    <label for="title">Title</label>
                    <input type="text" name="title" id="title" class="form-control mb-2" required />
                    <label for="image">Image</label>
                    <input type="url" name="image" id="image" class="form-control mb-2" required />
                    <label for="text">Text</label>
                    <textarea name="text" id="text" class="form-control mb-3" rows="3"></textarea>
                    <button class="btn btn-outline-success" type="submit">upload</button>
                </form>
            </div>
        </section>
    </div>
</main>

