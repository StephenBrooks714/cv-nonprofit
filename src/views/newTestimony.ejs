<!doctype html>
<html lang="en">
<%- include('layouts/header') -%>
<body>
<header>
    <%- include('layouts/navbar') -%>
</header>

<main>
    <div class="container" style="margin-top: 140px; margin-bottom: 90px;">
        <section class="row justify-content-center">
            <div class="col-lg-8 mb-2">
                <small class="small mb-2">Leave A Review</small>
                <h1 class="display-4"><span class="fw-bold">Our</span> <span class="text-info">Testimonies</span></h1>
                <p class="lead mb-3">This can help others before deciding to help us on our mission.</p>
                <form action="/store/testimony" method="post" enctype="multipart/form-data">
                    <label for="name">Name</label>
                    <input type="text" name="name" id="name" class="form-control mb-2" required />
                    <label for="title">Your Title</label>
                    <input type="text" name="title" id="title" class="form-control mb-2" required />
                    <label for="image">Media Image (optional)</label>
                    <input type="url" name="image" id="image" class="form-control mb-2" />
                    <label for="review" class="form -control">You Review</label>
                    <textarea name="review" id="review" class="form-control mb-3" spellcheck="true" minlength="125" required maxlength="850" rows="5"></textarea>
                    <button class="btn btn-outline-success" type="submit">upload</button>
                </form>
            </div>
        </section>
    </div>
</main>

<!-- MDB -->
<%- include('layouts/footer') -%>

</body>
</html>