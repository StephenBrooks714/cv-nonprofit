<% if(intro != "") { %>
    <% for(i=0; i < intro.length; i++) { %>
        <header class="mb-lg-6 mb-8 intro">
            <style>
                .intro {
                    background: linear-gradient(to bottom, rgba(0, 0, 0, 0.6), rgba(141, 16, 81, 0.3)),
                    url("<%= intro[i].image %>"),
                    no-repeat center center fixed;
                    width: 100%;
                    background-size: cover;
                    height: 70vh;
                }
            </style>
            <section class="container">
                <div class="row justify-content-center text-white align-items-center"
                     style="height: 80vh;">
                    <div class="col-lg-12 text-center">
                        <p class="lead mb-0">
                            <%= intro[i].text %>
                            <% if(loggedIn) { %>
                                <a href="/delete/homeIntro/<%= intro[i].id %>" class="text-warning ms-2">
                                    <i class="fas fa-trash"></i>
                                </a>
                            <% } %>
                        </p>
                        <h1 class="display-4 fw-bold"><%= intro[i].title %></h1>
                    </div>
                </div>
            </section>
        </header>
    <% } %>
<% } else { %>
    <header class="mb-lg-6 mb-8 intro">
        <style>
            .intro {
                background: linear-gradient(to bottom, rgba(0, 0, 0, 0.6), rgba(141, 16, 81, 0.3)),
                url("../assets/group-healing.png"),
                no-repeat center center fixed;
                width: 100%;
                background-size: cover;
                height: 70vh;
            }
        </style>
        <section class="container">
            <div class="row justify-content-center text-white align-items-center"
                 style="height: 80vh;">
                <div class="col-lg-12 text-center">
                    <p class="lead mb-0">
                        Cosmic Vibes
                        <% if(loggedIn) { %>
                            <a href="/newHomeIntro" class="text-info ms-2">
                                <i class="fas fa-pencil"></i>
                            </a>
                        <% } %>
                    </p>
                    <h1 class="display-4 fw-bold">A Nonprofit Organization</h1>
                </div>
            </div>
        </section>
    </header>
<% } %>