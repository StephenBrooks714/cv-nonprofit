<% if(faqs != "") { %>
    <div class="row mb-7" id="faq">
        <div class="col-12">
            <hr>
            <% if(loggedIn) { %>
                <button type="button" class="btn btn-sm btn-info ms-2" data-mdb-ripple-init data-mdb-modal-init data-mdb-target="#faqSection">
                    Add More Content <i class="fas fa-plus"></i>
                </button>

                <!-- Modal -->
                <div class="modal fade" id="faqSection" tabindex="-1" aria-labelledby="faqSection" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="faqSection">Add Content</h5>
                                <button type="button" class="btn-close" data-mdb-ripple-init data-mdb-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form action="/store/faq" method="post" enctype="multipart/form-data">
                                    <label for="question">Question</label>
                                    <input type="text" name="question" id="question" class="form-control mb-2" required />
                                    <label for="answer">Answer</label>
                                    <textarea name="answer" id="answer" class="form-control mb-3" rows="5"></textarea>
                                    <button class="btn btn-outline-success" type="submit">submit</button>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-mdb-ripple-init data-mdb-dismiss="modal">Close</button>

                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
            <%  for(i=0; i < faqs.length; i++) { %>
                <div class="mb-4">
                    <style>
                        .grayscale {
                            filter: grayscale(100%);
                        }
                    </style>
                    <h3 class="really-bold mb-2">
                        <%= faqs[i].question %>
                        <% if(loggedIn) { %>
                            <a href="/delete/faq/<%= faqs[i].id %>" class="text-warning ms-2">
                                <i class="fas fa-trash"></i>
                            </a>
                            <button type="button" class="btn btn-floating btn-info ms-2" data-mdb-ripple-init data-mdb-modal-init data-mdb-target="#updateFaqSection">
                                <i class="fas fa-pencil"></i>
                            </button>

                            <!-- Modal -->
                            <div class="modal fade" id="updateFaqSection" tabindex="-1" aria-labelledby="updateFaqSection" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="updateFaqSection">Update Content</h5>
                                            <button type="button" class="btn-close" data-mdb-ripple-init data-mdb-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <form action="/update/faq/<%= faqs[i].id %>" method="post" enctype="multipart/form-data">
                                                <label for="question">Question</label>
                                                <input type="text" name="question" id="question" class="form-control mb-2" required />
                                                <label for="answer">Answer</label>
                                                <textarea name="answer" id="answer" class="form-control mb-3" rows="5"></textarea>
                                                <button class="btn btn-outline-success" type="submit">submit</button>
                                            </form>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-mdb-ripple-init data-mdb-dismiss="modal">Close</button>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    </h3>
                    <p class="text-muted mb-4">
                        <%= faqs[i].answer %>
                    </p>
                    <hr style="border-color: #000; border-width: 5px; border-style: solid; margin: 1rem 0; width: 60%;">
                </div>
            <% } %>
            <hr>
        </div>
    </div>
<% } %>