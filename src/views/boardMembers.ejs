<!doctype html>
<html lang="en">
<%- include("layouts/header") -%>
<body>
<header class="mb-lg-8 mb-8">
    <%- include("layouts/navbar") -%>
</header>

<main>
    <section class="container my-5 py-5">
        <div class="row justify-content-center mb-4 align-items-center text-center">
            <div class="col-lg-12 mb-4">
                <h1>Our <span class="fw-bold text-decoration-underline">Board</span> <span class="purple-text">Members</span></h1>
            </div>
            <div class="col-lg-3 col-md-6 mb-lg-0 mb-4">
                <div class="flip-card">
                    <div class="flip-card-inner">
                        <div class="flip-card-front">
                            <img src="https://www.cosmicvibesnj.com/uploads/Reggie%20gong.jpg" alt="Reggie" style="width:100%;height:100%;">
                        </div>
                        <div class="flip-card-back">
                            <h1>Recep Dzuli</h1>
                            <p>Founder / CEO</p>
                            <p>Physical & Spiritual Healer</p>
                        </div>
                    </div>
                </div>
            </div>
            <% for(i=0; i < members.length; i++) { %>
                <div class="col-lg-3 col-md-6 mb-lg-0 mb-4">
                    <div class="flip-card">
                        <div class="flip-card-inner">
                            <div class="flip-card-front">
                                <img src="<%= members[i].image %>" alt="<%= members[i].name %>" style="width:100%;height:100%;">
                            </div>
                            <div class="flip-card-back">
                                <h1><%= members[i].name %></h1>
                                <p><%= members[i].role %></p>
                                <p><%= members[i].description %></p>
                                <% if(loggedIn) { %>
                                    <a href="/deleteBoardMember/<%= members[i]._id %>" class="btn me-2 btn-warning">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                    <a href="/updateBoardMember/<%= members[i]._id %>" class="btn btn-warning">
                                        <i class="fas fa-pen"></i>
                                    </a>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </section>
</main>
<%- include("layouts/footer") -%>
</body>
</html>